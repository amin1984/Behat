{{ form_start(form, { attr: { novalidate: 'novalidate' } }) }}
	<div class="row">
		{{ form_row(form.subject) }}
	</div>
	<div class="row">
		{{ form_row(form.contents) }}
	</div>
	<div class="row">
		{{ form_row(form.dueDate, { attr: { class: 'datepicker datepicker-date' } }) }}
	</div>
	<div class="row">
		{{ form_row(form.tags) }}
	</div>
	
	{{ form_rest(form) }}
{{ form_end(form) }}
